<%- include('../../partials/header.ejs') %>

<body>
    <%- include('../../partials/navbar.ejs') %>
    
    <div class="container">
        
        <hr>
        <div class="card">
            <div class="card-header">
                <h2>Edit categories</h2>
            </div>
            <div class="card-body">
                <form method="POST" action="/categories/update">
                    <input 
                        class="form-control" 
                        type="text" 
                        name="title"
                        value="<%= category.title %>"
                    >
                    <input 
                        type="hidden" 
                        name="id" 
                        value="<%= category.id %>"
                    >
                    <br>
                    <button class="btn btn-dark"> Update </button>
                </form>
            </div>
        </div>
        <hr>
    </div>

</body>


