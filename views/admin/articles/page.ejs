<%- include ('../../partials/header.ejs') %>
<%- include('../../partials/homenavbar.ejs') %>
<body>
    
    <div class="container">
        <hr>
        <% result.articles.rows.forEach( article => {%>
            <div class="card">
                <div class="card-body">
                    <a href="/<%= article.slug %>" style="color: inherit;"> <h3> <%= article.title %> </h3> </a>
                </div>
                <br>
            </div>
            <br>
        <% }) %>
        <hr>    
        <div class="row">
            <div class="col col-12">

                <% if(result.page > 1){ %>
                    <a href="/articles/page/<%= result.page - 1 %>" style="float: left;"><< Prev</a>
                <% } else if (result.page = 1) {%>
                    <a href="/" style="float: left;"><< Prev</a>
                <% } %>
                <% if(result.next){ %>
                    <a href="/articles/page/<%= result.page + 1 %>" style="float: right;">Next >></a>
                <% } %>
            </div>
        </div>
        <hr>
    </div>
    
</body>

<%- include ('../../partials/footer.ejs') %>